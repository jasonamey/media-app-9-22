{
  "compilerOptions": {
    "target": "es2016",                               
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "ESNext"
    ],   
    "allowJs": true,                              
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                                             
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true                                 
  },
  "include": [
    "./src/**/*", "custom.d.ts"
  ],
  "exclude": [
    "node_modules"
]
}
